html
  background black
  font-family sans-serif

body
  margin 0

.page-image
  position relative

.app-box
  visibility hidden
  opacity 0
  transition opacity 200ms
  background black
  position fixed
  top 50%
  left 50%
  min-width 300px
  max-width 400px
  min-height 450px
  transform translate(-50%, -75%)
  border 1px solid #fff
  box-shadow inset 0 0 0 1px rgba(255, 255, 255, .5),
  inset 0 0 0 2px rgba(255, 255, 255, .25),
  0 0 0 1px rgba(255, 255, 255, .3),
  0 0 0 2px rgba(255, 255, 255, .15)

  @media screen and (min-width 600px)
    width calc(100% - 200px)

  @media screen and (min-width 700px)
    width 400px

  @media screen and (max-height 799px) and (max-width 1159px)
    transform translate(-50%, -50%)

  @media screen and (max-height 799px) and (min-width 1200px)
    transform translate(0, 50%)

  @media screen and (min-height 800px) and (min-width 1200px)
    transform translate(0, -75%)

  &.visible
    visibility visible
    opacity 1
    transform opacity 200ms
